<div class="skills-table">
  {% for entry in data[1] %}
    <div class="row skill-row">
      <div class="col-sm-3 skill-category font-weight-bold">
        {{- entry.name -}}
      </div>
      <div class="col-sm-9 skill-keywords font-weight-light">
        {% if entry.keywords %}
          {% for keyword in entry.keywords %}
            {{ keyword -}}
            {%- unless forloop.last %} &ensp;&middot;&ensp; {% endunless %}
          {% endfor %}
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>

<style>
  .skill-row {
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--global-divider-color);
  }
  .skill-row:last-child {
    border-bottom: none;
  }
  .skill-category {
    font-size: 0.95rem;
  }
  .skill-keywords {
    font-size: 0.95rem;
  }
</style>
